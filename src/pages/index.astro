---
import "../styles/globals.scss";
import "../styles/effects.scss";
import setupComet from "../scripts/cometTrail";
import setupStarfield from "../scripts/starfield";
import { konami, voidPortal } from "../scripts/easterEggs";

import HeaderHUD from "../components/HeaderHUD.astro";
import Hero from "../components/Hero.astro";
import Schedule from "../components/Schedule.astro";
import Clips from "../components/Clips.astro";
import About from "../components/About.astro";
import StickerWall from "../components/StickerWall.astro";
import TipJar from "../components/TipJar.astro";
import PressKit from "../components/PressKit.astro";
import Guestbook from "../components/Guestbook.astro";
import Footer from "../components/Footer.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>unhingedrowena — live(ish)</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="/favicon.ico" />
  </head>
  <body class="scanlines-toggle" data-on="false">
    <HeaderHUD />
    <main>
      <section data-wobble><Hero /></section>
      <section data-wobble><Schedule /></section>
      <section data-wobble><Clips /></section>
      <section data-wobble><About /></section>
      <section data-wobble><StickerWall /></section>
      <section data-wobble><TipJar /></section>
      <section data-wobble><PressKit /></section>
      <section data-wobble><Guestbook /></section>
    </main>
    <Footer />
    <script is:inline>
      import setupComet from "/src/scripts/cometTrail.ts";
      import setupStarfield from "/src/scripts/starfield.ts";
      import { konami, voidPortal } from "/src/scripts/easterEggs.ts";
      import wobble from "/src/scripts/wobble.ts";
      import glitter from "/src/scripts/glitter.ts";

      setupStarfield();
      setupComet();        // site-wide comet trail
      glitter();           // twinkly glitter OMG
      konami()();          // secret BIOS page
      voidPortal();

      // tiny random rotate/skew on sections for messy vibes
      requestAnimationFrame(()=> wobble("[data-wobble]"));
    </script>
  </body>
</html>
